<!--                        </goals>-->
                        <id>compile-java10</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <configuration>
                            <!-- 1. 核心属性：替代了 source/target，确保使用 Java 10 的 API 签名编译 -->
                            <release>10</release>

                            <!-- 2. 指定 Java 10 特有的源代码目录 -->
                            <compileSourceRoots>
                                <sourceRoot>${project.basedir}/src/main/java10</sourceRoot>
                            </compileSourceRoots>

                            <!-- 3. 直接输出到 MRJAR 要求的目录结构中，省去资源拷贝步骤 -->
                            <outputDirectory>${project.build.outputDirectory}/META-INF/versions/10</outputDirectory>

                            <!-- 4. 关键：确保编译时能引用到默认主目录（src/main/java）下的类 -->
                            <compilerArgs>
                                <arg>-Xlint:all</arg>
                            </compilerArgs>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.0.2</version>
                <executions>
                    <execution>
                        <id>copy-resources-java9</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.outputDirectory}/META-INF/versions/9</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${java9.build.outputDirectory}</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-resources-java10</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.outputDirectory}/META-INF/versions/10</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${java10.build.outputDirectory}</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.0.2</version>
                <configuration>
                    <archive>
                        <manifestEntries>
                            <Multi-Release>true</Multi-Release>
                            <Main-Class>com.example.Main</Main-Class>
                        </manifestEntries>
                    </archive>
                    <finalName>multi-release-jar-demo</finalName>
                </configuration>
            </plugin>
        </plugins>

    </build>
</project>
