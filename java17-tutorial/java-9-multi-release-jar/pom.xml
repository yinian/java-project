<!--                        </goals>-->
                        <id>compile-java9</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <configuration>
                            <!-- 1. 核心属性：替代了 source/target，确保使用 Java 10 的 API 签名编译 -->
                            <release>9</release>

                            <!-- 2. 指定 Java 10 特有的源代码目录 -->
                            <compileSourceRoots>
                                <sourceRoot>${project.basedir}/src/main/java9</sourceRoot>
                            </compileSourceRoots>

                            <!-- 3. 直接输出到 MRJAR 要求的目录结构中，省去资源拷贝步骤 -->
                            <outputDirectory>${project.build.outputDirectory}/META-INF/versions/9</outputDirectory>

                            <!-- 4. 关键：确保编译时能引用到默认主目录（src/main/java）下的类 -->
                            <compilerArgs>
                                <arg>-Xlint:all</arg>
                            </compilerArgs>
                        </configuration>
                    </execution>
                    <execution>
